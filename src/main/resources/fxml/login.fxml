<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.mdgriffin.distributedcomputingproject.gui.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" styleClass="mainheading">FTP Express</Label>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" styleClass="subheading">Login</Label>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Username:"/>
    <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Password:"/>
    <TextField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label fx:id="lblLoginError" styleClass="error" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" text=""/>

    <Button fx:id="btnLogin" text="Login" onAction="#onBtnLoginClick" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" />
</GridPane>
